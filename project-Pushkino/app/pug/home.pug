	- var page_name = "home"

	- var title = "Купить Бетон в Пушкино с доставкой, цена производителя Лесстрон"
	- var description = "Бетон и раствор в Пушкино по цене производителя. Доставка до заказчика в коротие сроки"
	- var keywords = "бетон Пушкино, купить бетон, цена на бетон, бетон с доставкой, раствор Пушкино, купить раствор, раствор цена"

	- var beton_class = "home-page"


